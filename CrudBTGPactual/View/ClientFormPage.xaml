<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrudBTGPactual.View.ClientFormPage"
             Title="ClientFormPage">
    <ScrollView>
        <Grid Margin="20" RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" BackgroundColor="#34495E" Padding="15,10" Margin="0,0,0,20">
                <Label Text="{Binding Title}"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
            </Border>

            <!-- Nome -->
            <StackLayout Grid.Row="1" Spacing="5">
                <Label Text="Nome *" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50" />
                <Border BackgroundColor="White" Shadow="False" Background="#BDC3C7" Padding="0">
                    <Entry Text="{Binding Name}"
                           Placeholder="Digite o nome"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </Border>
            </StackLayout>

            <!-- Sobrenome -->
            <StackLayout Grid.Row="2" Spacing="5">
                <Label Text="Sobrenome *" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50" />
                <Border BackgroundColor="White" Shadow="False" Background="#BDC3C7" Padding="0">
                    <Entry Text="{Binding Lastname}"
                           Placeholder="Digite o sobrenome"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </Border>
            </StackLayout>

            <!-- Idade -->
            <StackLayout Grid.Row="3" Spacing="5">
                <Label Text="Idade *" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50" />
                <Border BackgroundColor="White" Shadow="False" Background="#BDC3C7" Padding="0">
                    <Entry Text="{Binding AgeText}"
                           Placeholder="Digite a idade (1-150)"
                           Keyboard="Numeric"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </Border>
            </StackLayout>

            <!-- Endereço -->
            <StackLayout Grid.Row="4" Spacing="5">
                <Label Text="Endereço *" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       TextColor="#2C3E50" />
                <Border BackgroundColor="White" Shadow="False" Background="#BDC3C7" Padding="0">
                    <Entry Text="{Binding Address}"
                           Placeholder="Digite o endereço completo"
                           FontSize="16"
                           BackgroundColor="Transparent" />
                </Border>
            </StackLayout>

            <!-- Campos obrigatórios -->
            <Label Grid.Row="5" 
                   Text="* Campos obrigatórios"
                   FontSize="12"
                   TextColor="#95A5A6"
                   HorizontalOptions="Start"
                   Margin="0,5,0,15" />

            <!-- Botões -->
            <StackLayout Grid.Row="6" 
                         Orientation="Horizontal" 
                         HorizontalOptions="Center" 
                         Spacing="20"
                         VerticalOptions="End"
                         Margin="0,20,0,0">

                <Button Text="{Binding SaveButtonText}"
                        Command="{Binding SaveCommand}"
                        BackgroundColor="#27AE60"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="30,12"
                        MinimumWidthRequest="120" />

                <Button Text="Cancelar"
                        Command="{Binding CancelCommand}"
                        BackgroundColor="#95A5A6"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="8"
                        Padding="30,12"
                        MinimumWidthRequest="120" />
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>